<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_scan_barcode"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:gravity="center"
        android:drawablePadding="5dp"
        android:textSize="17sp"
        android:drawableStart="@drawable/selector_scan"
        android:drawableLeft="@drawable/selector_scan"
        android:text="Scan"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45" />

    <TextView
        android:id="@+id/tv_search"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:gravity="center"
        android:drawablePadding="5dp"
        android:textSize="17sp"
        android:drawableStart="@mipmap/ic_magnify"
        android:drawableLeft="@mipmap/ic_magnify"
        android:text="Search"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_scan_barcode"
        app:layout_constraintVertical_bias="0.20" />



</android.support.constraint.ConstraintLayout>